<div class="row">
    

        <div class="col-md-4 col-md-offset-4">

        <% if (messages) { %>
                <% if (messages.warning) { %>
                    <% if (messages.warning.length) { %>
                         <div class="alert alert-warning alert-dismissable"> 
                                <%= messages.warning %>  

                        </div   >
                        <% } %>

                 <% } %>       
                <% if (messages.danger) { %>
                    <% if (messages.danger.length) { %>
                         <div class="alert alert-warning alert-dismissable"> 
                                <%= messages.danger %>  

                        </div   >
                        <% } %>
                 <% } %>

                <% if (messages.success) { %>
                    <% if (messages.success.length) { %>
                         <div class="alert alert-warning alert-dismissable"> 
                                <%= messages.success %>  

                        </div   >
                        <% } %>
                    <% } %>    
                        

          <% } %> 
            <h1>Sign In</h1>
            
            <form action="/user/signin" method="POST">
                <div class="form-group">
                    <label for="email">E-mail</label>
                    <input type="text" id="email" name="userName" placeholder="Email" class="form-control">
                </div>
                  <div class="form-group">
                  <label for="password">Password </label>
                    <input type="password" id="password" name="password" placeholder="Password" class="form-control">
                </div>
                <a href="/user/signup" role="button" class="btn btn-primary"> Sign Up </a> 
                <button type="submit" class="btn btn-primary"> Sign In </button>
                
                <label for="remember"> Remmeber Me </label>
                <input type="checkbox" name="remember" placeholder="Remeber Me">

            </form>
           
        </div>
    
    </div>




