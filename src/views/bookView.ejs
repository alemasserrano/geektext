  <!-- script references -->
  <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
  <script src="/js/bootstrap.min.js"></script>
  <script src="/js/rating.js"></script>
  <script src="/js/jquery.raty.js"></script>

  <script>
    $(document).ready(function () {
      $.fn.raty.defaults.path = '/images/';
      $('.star').raty({
        readOnly: true,
        score: function (book) {
          return $(this).attr('data-score');
        }
      });
    });

    var closeup = document.getElementById('thumbnail-closeup');

    var img = document.getElementById('thumbnail-book');
    var closeupImg = document.getElementById("img01");
    var captionText = document.getElementById("closeup-caption");
    img.onclick = function(){
        closeup.style.display = "block";
        closeupImg.src = this.src;
        captionText.innerHTML = this.alt;
    }

    var span = document.getElementsByClassName("close")[0];

    span.onclick = function() { 
        closeup.style.display = "none";
    }
  </script>

</body>

</html>