      <div class="row">
        <div class="col-md-12">
          <div class="top-spacer"> </div>
        </div>
      </div>
    </div><!-- /cont -->

  </div>


  <div class="container">
    <div class="row">

      <div class="col-md-12">

        <div class="panel">
          <div class="panel-body">



            <!--/stories-->

            <div class="row">
              <br>
              <div class="col-md-2 col-sm-3 text-center">
                <img id="thumbnail-book" alt="<%= book.title %>" src="<%= book.img %>" 
                  style="width:100px;height:100px">
              </div>
              <div class="col-md-10 col-sm-9">
                <h3>
                  <%= book.title %>
                </h3>
                <div class="row">
                  <div class="col-xs-9">
                    <h4><span class="label label-default">
                        <%= book.author_name %></span></h4>
                    <h4>
                    </h4>
                    <p>Biography: <%= book.author_bio %></p>
                    <h4><span class="label label-default">
                        Description</span></h4>
                        <h4>
                    </h4>
                    <p> <%= book.description %> </p>
                  </div>
                  <div class="col-xs-3">
                    <h4><span class="label label-default">
                        Publisher: <%= book.publisher_name %></span></h4>
                        <h4>
                    </h4>
                    <h4><span class="label label-default">
                        Released: <%= book.release_date %></span></h4>
                        <h4>
                    </h4>
                  </div>
                </div>

                <div class="col-md-10 col-sm-9">
                  <h1><span class="star" data-score="<%= book.ratingAverage %>"></span></h1>
                  <h1>
                  </h1>
                  <h4>Average Rating (
                    <%= book.ratingAverage %>)</h4>
                  <h5>Based on
                    <%= book.ratingNumber %> reviews</h5>
                </div>

                <!-- <div class="col-md-9 colDiv">
                  <div class="row">
                    <div class="col-md-4">
                      <div class="count">
                        <h1>
                          <%= book.ratingNumber %>
                        </h1>
                        <h2>Ratings</h2>
                        <h2>Total Ratings received</h2>
                      </div>

                    </div>
                  </div>
                </div> -->
                <br><br>

                <!-- <% if(books.ratingNumber > 0) { %> -->
                <%for(let i = 0; i < book.ratingArray.length; i++) { %>
                <div class="col-md-12 reniewDiv">
                  <div>
                    <img src="" width="100px" height="100px">
                  </div>
                  <div class="col-md-8">
                    <h3>
                      <a href="#">
                        <%= book.title %></a>
                    </h3>
                    <h4>
                      <%= book.author_name %>
                    </h4>
                  </div>
                  <div class="col-md-2" style:"width:150px">
                    <h3>Rating</h3>
                    <span class="star" data-score="<%= book.ratingAverage %>"></span>
                  </div>
                </div>
                <%}%>
                <!-- <% } %> -->

              </div>
            </div>
            <hr>
            <br><br>
            
            <div id="thumbnail-closeup" class="closeup">
              <span class="close">&times;</span>
              <img class="closeup-image" id="img01">
              <div id="closeup-caption"></div>
            </div>

            <!--/stories-->


            <a href="/" class="btn btn-primary pull-right btnNext">More <i class="glyphicon glyphicon-chevron-right"></i></a>
            <a href="/review/<%= book.id %>" class="btn btn-success">Rate this book <i class="glyphicon glyphicon-chevron-right"></i></a>


          </div>
        </div>



      </div>
      <!--/col-12-->
    </div>
  </div>


  <hr>

  <div class="container" id="footer">
    <div class="row">
      <div class="col col-sm-12">
      </div>
    </div>
  </div>

  <hr>

  <hr>

