                            </div>
                            <div class="col-md-10 col-sm-9">
                                <h3>
                                    <%= book.title %>
                                </h3>
                                <div class="row">
                                    <div class="col-xs-9">
                                        <h4><span class="label label-default">
                                                <%= book.author %></span></h4>
                                        <h4>
                                        </h4>
                                    </div>
                                    <div class="col-xs-3"></div>
                                </div>
                                <br><br>

                            </div>
                            <form action="" method="post">
                                <input class="form-control" id="id" value="<%= book.id %>" type="hidden">
                                <div class="col-md-10 col-sm-9">
                                    <label for="">OrderNumber(Testing)</label>
                                    <input class="form-control" name="orderId" id="orderId" value=""
                                        type="number">
                                </div>
                                <div class="col-md-10 col-sm-9">
                                    <h2>Rate this book</h2>
                                    <div class="col-sm-12" id="star_rating">
                                        <img id="1_star" src="/images/star-off.png" alt="1" tittle="Bad">
                                        <img id="2_star" src="/images/star-off.png" alt="2" tittle="Poor">
                                        <img id="3_star" src="/images/star-off.png" alt="3" tittle="Fair">
                                        <img id="4_star" src="/images/star-off.png" alt="4" tittle="Good">
                                        <img id="5_star" src="/images/star-off.png" alt="5" tittle="Excellent">

                                        <span id="showTitle"></span>
                                    </div>
                                    <br><br>
                                    <br><br>
                                </div>
                                <div class="col-md-10 col-sm-9">
                                    <div class="form-group ">
                                        <label for="">Write your review</label>
                                        <textarea name="review" id="review" rows="8" cols="80" class="form-control"></textarea>
                                    </div>
                                    <div class="form-group ">
                                        <input type="submit" id="rate" value="Create" class="form-control btn 
                                        btn-primary"
                                            name="rate">
                                    </div>
                                </div>

                            </form>
